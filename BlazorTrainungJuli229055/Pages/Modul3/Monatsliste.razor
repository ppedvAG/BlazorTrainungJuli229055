@page "/monate"
<h3>Monatsliste</h3>
<div class="container">
    <div class="row">
        <div class="col">
            <h2>@Monat</h2>
        </div>
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item active">Monate</li>
                @for (int i = 0; i < 12; i++)
                {
                    var m = i;


                    <li class="list-group-item list-group-item-action" @onclick="()=>Select(m)">
                        @DateTime.Now.AddMonths(i).ToString("MMMM")
                    </li>

                }
            </ul>
        </div>
    </div>
</div>
@code {
    string Monat;
    void Select(int m)
    {
        Monat = DateTime.Now.AddMonths(m).ToString("MMMM");

    }
}
